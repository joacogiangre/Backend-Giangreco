doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        div
            form.shadow.p-3.mb-5.bg-body.rounded(action='/api/productos/' method='post')
                h2 producto
                div
                    label.form-label(for='nombre') nombre:
                    input#nombre.form-control(type='text' name='title')
                div
                    label.form-label(for='precio') precio:
                    input#precio.form-control(type='number' name='price')
                div
                    label.form-label(for='img') url de imagen:
                    input#img.form-control(type='text' name='thumbnail')
                button.btn.btn-primary.my-2(type='submit') Enviar
            a(href='/api/productos')
                button.btn.btn-primary(type='button') ver Productos
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3' crossorigin='anonymous')