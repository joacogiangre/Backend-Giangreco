<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>formulario</title>
        <link rel="stylesheet" href="./css/home.css">
        <script src="/socket.io/socket.io.js"></script>
</head>

<body>
    <div class="d-flex align-items-center flex-column ">
        <form class="shadow p-3 mb-5 bg-body rounded" id="formulario">
            <h2>PRODUCTO</h2>
            <div>
                <label for="nombre" class="form-label">nombre</label>
                <input type="text" name="title" id="nombre" class="form-control">
            </div>
            <div>
                <label for="precio" class="form-label">precio:</label>
                <input type="number" name="price" id="precio" class="form-control">
            </div>
            <div>
                <label for="img" class="form-label">url</label>
                <input type="text" name="thumbnail" id="img" class="form-control">
            </div>
            <button type="button" class="btn btn-primary my-2" id="enviar">enviar</button>
        </form>
    </div>

    <div id="articulos">
        <div class="d-flex align-items-center flex-column" id="tabla">
            <table class="table table-dark">
                <tr>
                    <th>nombre</th>
                    <th>precio</th>
                    <th>img</th>
                </tr>
                <tbody id="tablaItems">
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex align-items-center flex-column ">
        <form class="shadow p-3 mb-5 bg-body rounded" id="">
            <h2>NOTAS</h2>
            <div>
                <label for="user" class="form-label">usuario </label>
                <input type="text" name="name" id="user" class="form-control">
            </div>
            <div>
                <label for="nota" class="form-label">nota</label>
                <input type="text" name="mensaje" id="nota" class="form-control">
            </div>
            <button type="button" class="btn btn-primary my-2" id="enviarNota">enviar</button>
        </form>
    </div>

    <div class="container-xxl ">
        <div id="chatText"></div>
    </div>
    <%- include('../partials/scriptBS') %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
        <script src="./js/client.js"></script>
</body>

</html>